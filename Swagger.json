        "/operations/list": {
            "get": {
                "summary": "Retrieves a list of operations",
                "security": [{
                    "Bearer": []
                }],
                "tags": ["Operations"],
                "description":  "Retrieves a list of operations performed by logged user",
                "produces": ["application/json"],
                "parameters": [
                    {
                        "in": "query",
                        "name": "limit",
                        "required": false,
                        "description": "Number of items to retrieve",
                        "schema": {
                            "type": "number",
                            "example": "10"
                        }
                    },
                    {
                        "in": "query",
                        "name": "page",
                        "required": false,
                        "description": "Number of page",
                        "schema": {
                            "type": "number",
                            "example": "1"
                        }
                    },
                    {
                        "in": "query",
                        "name": "date",
                        "required": false,
                        "description": "Date to filter (retrieves elementes from the page sent)",
                        "schema": {
                            "type": "string",
                            "example": "2023-07-10"
                        }
                    },
                    {
                        "in": "query",
                        "name": "type",
                        "required": false,
                        "description": "Type to filter operations",
                        "schema": {
                            "type": "string",
                            "example": "addition"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "currentPage": {
                                    "type": "number",
                                    "example": "1"
                                },
                                "totalPage": {
                                    "type": "number",
                                    "example": "2"
                                },
                                "data": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/definitions/Operation"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Invalid credentials",
                        "schema": {
                            "type": "object",
                            "$ref": "#/definitions/failLoginResponse"
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "schema": {
                            "type": "object",
                            "$ref": "#/definitions/errorResponse"
                        }
                    }
                }
            }
        },
