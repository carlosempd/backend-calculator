            "get": {
                "summary": "Seeds database",
                "tags": ["Seed"],
                "description":  "seeds database with users and operations",
                "produces": ["application/json"],
                "parameters": [],
                "responses": {
                    "200": {
                        "description": "successful operation",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": {
                                    "type": "string",
                                    "example": "SEED OK"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Server error",
                        "schema": {
                            "type": "object",
                            "$ref": "#/definitions/errorResponse"
                        }
                    }
                }
            }
        },
