{
    "swagger": "2.0",
    "info": {
        "description": "This is a simple calculator NodeJS API project",
        "version": "1.0.0",
        "title": "Calculator API"
    },
    "host": "localhost:3000",
    "basePath": "/api/v1",
    "securityDefinitions": {
        "Bearer": {
          "type": "apiKey",
          "name": "Authorization",
          "in": "header",
          "description": "Enter the token with the `Bearer: ` prefix, e.g. \"Bearer abcde12345\"."
        }
      },
    "definitions": {
        "User": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "status": {
                    "type": "string",
                    "enum": ["active", "inactive"]
                },
                "balance": {
                    "type": "number"
                }
            }
        },
        "Operation": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["addition", "substraction", "multiplication", "division", "square_root", "random_string"]
                },
                "cost": {
                    "type": "number"
                },
                "date": {
                    "type": "string",
                    "format": "date"
                },
                "user": {
                    "type": "string"
                },
                "result": {
                    "type": "string"
                },
                "isDeleted": {
                    "type": "boolean"
                }
            }
        },
        "authBody": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "loginResponse": {
            "type": "object",
            "properties": {
                "token": {
                    "type": "string"
                }
            }
        },
        "errorResponse": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string"
                }
            }
        },
        "failLoginResponse": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string",
                    "example": "Invalid credentials"

                }
            }
        },
        "registerResponse": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string",
                    "example": "User created succesfully"

                }
            }
        },
        "calculatorResponse": {
            "type": "object",
            "properties": {
                "result": {
                    "type": "string"

                }
            }
        },
        "twoDigitsOperation": {
            "type": "object",
            "properties": {
                "firstDigit": {
                    "type": "number"
                },
                "secondDigit": {
                    "type": "number"
                }
            }
        },
        "oneDigitOperation": {
            "type": "object",
            "properties": {
                "digit": {
                    "type": "number"
                }
            }
        }
    },
    "paths": {
